@page
@model ShopWeb.Pages.Users.IndexModel
@{
    Layout = "_AdminLayout";
}


<!-- Main -->
<div class="container">
    <div class="table-wrapper">
        <div class="table-title" style="width: 102%;">
            <div class="menu">
                <div>
                    <h2 style="width: 100%;">Manage <b>Account</b></h2>
                </div>

            </div>
        </div>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Photo</th>
                    <th>Username</th>
                    <th>Full Name</th>
                    <th>Email</th>s
                    <th>Birth Day</th>
                    <th>Sex</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Role</th>
                    <th>Delete</th>

                </tr>
            </thead>
            <tbody>
                <c:forEach items="${list}" var="o">

                    <tr>
                        <td>${o.accId}</td>
                        <td>
                            <img width="150px" src="${o.photo}">
                        </td>
                        <td>${o.userName}</td>
                        <td>${o.fullName}</td>
                        <td>${o.email}</td>
                        <td>${o.birtDay}</td>
                        <td>${o.sex}</td>
                        <td>${o.phone}</td>
                        <td>${o.address}</td>
                        <td>${o.role}</td>
                        <td>

                            <a href="deleteacc?id=${o.accId}" class="delete" data-toggle="modal"><span class="material-symbols-outlined" title="delete">delete</a>
                        </td>





                    </tr>




                </c:forEach>
            </tbody>
        </table>
        <div class="clearfix">
        </div>
        <!-- Edit Modal HTML -->




    </div>
</div>